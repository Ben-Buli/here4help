# Here4Help Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=8889
DB_NAME=hero4helpdemofhs_hero4help
DB_USERNAME=root
DB_PASSWORD=root
DB_CHARSET=utf8mb4

# Production Database (for deployment)
PROD_DB_HOST=localhost
PROD_DB_PORT=3306
PROD_DB_NAME=your_production_database
PROD_DB_USERNAME=your_production_username
PROD_DB_PASSWORD=your_production_password

# Socket.IO Server Configuration
SOCKET_PORT=3001
SOCKET_HOST=localhost

# Application URLs
DEV_BASE_URL=http://localhost:8888/here4help/backend/api
PROD_BASE_URL=https://your-domain.com/api

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=604800

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Environment
APP_ENV=development
APP_DEBUG=true

# Email Configuration (if needed)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# Third-party APIs
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret