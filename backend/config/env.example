# Here4Help Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION (Backend Only - Never expose to frontend)
# =============================================================================
DB_HOST=localhost
DB_PORT=8889
DB_NAME=hero4helpdemofhs_hero4help
DB_USERNAME=root
DB_PASSWORD=root
DB_CHARSET=utf8mb4

# Production Database (for deployment)
PROD_DB_HOST=localhost
PROD_DB_PORT=3306
PROD_DB_NAME=your_production_database
PROD_DB_USERNAME=your_production_username
PROD_DB_PASSWORD=your_production_password

# =============================================================================
# JWT CONFIGURATION (Backend Only - Never expose to frontend)
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=604800

# =============================================================================
# THIRD-PARTY AUTHENTICATION (Backend Only - Secrets)
# =============================================================================
# Google OAuth (Backend needs both ID and Secret)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8888/here4help/backend/api/auth/google/callback

# Facebook OAuth (Backend needs App ID, Secret, and Client Token)
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_CLIENT_TOKEN=your_facebook_client_token_here
FACEBOOK_REDIRECT_URI=http://localhost:8888/here4help/backend/api/auth/facebook/callback

# Apple OAuth (Backend needs Service ID, Team ID, and Private Key)
APPLE_SERVICE_ID=com.example.here4help.login
APPLE_TEAM_ID=your_apple_team_id_here
APPLE_PRIVATE_KEY_PATH=path/to/your/private_key.p8
APPLE_REDIRECT_URI=http://localhost:8888/here4help/backend/api/auth/apple/callback

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8888/here4help

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Frontend URLs (comma-separated)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8081

# =============================================================================
# SOCKET.IO SERVER CONFIGURATION
# =============================================================================
SOCKET_PORT=3001
SOCKET_HOST=localhost

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# =============================================================================
# EMAIL CONFIGURATION (if needed)
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# =============================================================================
# NGROK CONFIGURATION (for development)
# =============================================================================
# Update these when using ngrok
# GOOGLE_REDIRECT_URI=https://xxxx.ngrok-free.app/here4help/backend/api/auth/google/callback
# FACEBOOK_REDIRECT_URI=https://xxxx.ngrok-free.app/here4help/backend/api/auth/facebook/callback
# APPLE_REDIRECT_URI=https://xxxx.ngrok-free.app/here4help/backend/api/auth/apple/callback